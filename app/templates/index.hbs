<div class="container-fluid">

  <!-- carousel -->
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-example-generic" data-slide-to="1"></li>
      <li data-target="#carousel-example-generic" data-slide-to="2"></li>
      <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="item active">
        <img src="http://i.imgur.com/FW49Ezo.jpg" alt="First slide">
        <div class="carousel-caption" style="background-color:#333333;">
          <h1 style="color:#e2713d;">Tuskys</h1>
          <h4>Get A Kilogram Of Ice Cream For FREE At Tuskys For Any Purchase Above 2500 Shillings!</h4>
        </div>
      </div>
      <div class="item">
        <img src="http://i.imgur.com/7HO7x46.jpg" alt="Second slide">
        <div class="carousel-caption" style="background-color:#333333;">
          <h1 style="color:#e2713d;">Naivas</h1>
          <h4>Buy One Coca Cola, Get One FREE! Only In Naivas!</h4>
        </div>
      </div>
      <div class="item">
        <img src="http://i.imgur.com/KPV3G3Q.jpg" alt="Third slide">
        <div class="carousel-caption" style="background-color:#333333;">
          <h1 style="color:#e2713d;">Nakumatt</h1>
          <p>Upto 30% Off On New Mobile Phones. Visit FoneXpress Nakumatt Now!</p>
        </div>
      </div>
      <div class="item">
        <img src="http://i.imgur.com/PkeVWOB.jpg" alt="Fourth slide">
        <div class="carousel-caption" style="background-color:#333333;">
          <h1 style="color:#e2713d;">Uchumi</h1>
          <p>Spend Over 500 Shillings At Uchumi And You Stand To Win A Trip For Two To The Maasai Mara.</p>
        </div>
      </div>
    </div>
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev" style="background:transparent;">
    <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next" style="background: transparent;">
    <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>
  <!-- carousel -->


  <div class="row display-flex">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
      <ul class="row-fluid block-grid-4">
        {{#each model as |products|}}
        <li>
          {{#link-to 'check' products.id}}
          <div class="thumbnail">
            <img src="{{products.image}}" alt="Location" style="width:100%;">
            <div class="caption">
              <h5 class="text-center" id="product-name">{{products.name}}</h5>
              <button class="btn btn-default" id="btn-view">View Product</button>
            </div>
          </div>
          {{/link-to}}
        </li>

        {{/each}}
      </ul>
    </div>
    <div class="col-sm-1"></div>
  </div>
</div>

