{{#if addNewReviewForm}}
<h2 class="text-center">Add A New Review</h2>
<form>
  <div class="form-group">
    <label for="text">Your Name:</label>
    {{input required value=username id="username" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input required value=date id="date" class="form-control" type="date"}}
  </div>
  <div class="form-group">
    <label for="profilePicture">Enter Picture URL</label>
    {{input required value=profilePicture id="profilePicture" class="form-control"}}
  </div>
  <div class="form-group">
    <label>Rate Us (1-5 scale)</label>
    <br>
    <button {{action 'sortedRating5'}} type="button" class="btn btn-info" id="fiveStar">
      <span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span> 5 Stars
    </button>
    <button {{action 'sortedRating4'}} type="button" class="btn btn-info" id="fourStar">
      <span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span> 4 Stars
    </button>
    <button {{action 'sortedRating3'}} type="button" class="btn btn-info" id="threeStar">
      <span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span> 3 Stars
    </button>
    <button {{action 'sortedRating2'}} type="button" class="btn btn-info" id="twoStar">
      <span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span> 2 Stars
    </button>
    <button {{action 'sortedRating1'}} type="button" class="btn btn-info" id="oneStar">
      <span class="glyphicon glyphicon-star"></span> 1 Stars
    </button>
  </div>
  <div class="form-group">
    <label for="reviewContent">Review Content</label>
    {{textarea required value=reviewContent id="reviewContent" class="form-control" rows="5"}}
  </div>
  <button {{action "saveNewReview"}} class="btn-review">Save</button>
</form>
{{else}}
<button {{action "showNewReviewForm"}} class="btn-review">Add New Review</button>
{{/if}}
